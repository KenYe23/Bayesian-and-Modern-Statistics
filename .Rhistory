## prior and data for group 2
a<-2   ; b<-1
sy<-66 ; n<-44
## Monte Carlo samples
theta.mc10<-rgamma(10,a+sy,b+n)
theta.mc100<-rgamma(100,a+sy,b+n)
theta.mc1000<-rgamma(1000,a+sy,b+n)
hist(theta.mc10)
hist(theta.mc100)
hist(theta.mc1000)
mean(theta.mc10<1.75)
mean(theta.mc100<1.75)
mean(theta.mc1000<1.75)
quantile(theta.mc10, c(.025,.975))
quantile(theta.mc100, c(.025,.975))
quantile(theta.mc1000, c(.025,.975))
theta1.mc<-rgamma(10000,219,112)
theta2.mc<-rgamma(10000,68,45)
thetas<-seq(.9,2.5,length=1000)
plot(thetas,dgamma(thetas,219,112),type="l",col="lightgreen",lwd=3)
lines(thetas,dgamma(thetas,68,45),col="lightblue",lwd=3)
lines(density(theta1.mc),col="green")
lines(density(theta2.mc),col="blue")
hist(theta1.mc,add=TRUE,prob=TRUE,col="lightgreen")
hist(theta2.mc,add=TRUE,prob=TRUE,col="lightblue")
